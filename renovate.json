{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [".devcontainer/Dockerfile"],
      "matchStrings": ["\\sGO_VERSION=(?<currentValue>\\S+)\\s"],
      "datasourceTemplate": "golang-version",
      "depNameTemplate": "go"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [".devcontainer/Dockerfile"],
      "matchStrings": ["\\sKIND_VERSION=(?<currentValue>\\S+)\\s"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "kubernetes-sigs/kind"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [".devcontainer/Dockerfile"],
      "matchStrings": ["\\sKUBECTL_VERSION=(?<currentValue>\\S+)\\s"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "kubernetes/kubernetes"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [".devcontainer/Dockerfile"],
      "matchStrings": [
        "\\sCLOUD_PROVIDER_KIND_VERSION=(?<currentValue>\\S+)\\s"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "kubernetes-sigs/cloud-provider-kind"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["ghcr.io/kofuk/premises"],
      "matchDatasources": ["docker"],
      "enabled": false
    },
    {
      "groupName": "Bun",
      "matchDatasources": ["go"],
      "matchPackageNames": [
        "github.com/uptrace/bun",
        "github.com/uptrace/bun/**"
      ]
    },
    {
      "groupName": "OpenTelemetry-Go",
      "matchDatasources": ["go"],
      "matchDepNames": ["go.opentelemetry.io/**"]
    },
    {
      "groupName": "Redis client for Go",
      "matchDatasources": ["go"],
      "matchSourceUrls": ["https://github.com/redis/go-redis"]
    },
    {
      "groupName": "Go",
      "matchDatasources": ["golang-version"],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "Go",
      "matchDepNames": ["golang"],
      "matchDatasources": ["docker"],
      "rangeStrategy": "bump"
    }
  ]
}
