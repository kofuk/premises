{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 150
  },
  "javascript": {
    "formatter": {
      "bracketSpacing": false,
      "trailingCommas": "none",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "noStaticElementInteractions": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    }
  }
}
